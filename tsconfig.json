{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
        "es2017",
        "dom"
    ],
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "bin",
    "sourceMap": true
  },
  "files": [ "src/main.ts" ]
}